generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/w-auth"
}

datasource db {
  provider = "postgresql"
  url      = env("W_AUTH_DATABASE_URL")
}

enum PermissionLevel {
  General
  SemiGeneral
  Member
  Confidential
  Admin
  SuperAdmin
}

model User {
  username   String          @unique
  unique_id  String          @id @default(uuid())
  grade      Int
  name       String
  student_id String          @unique
  auth       Json[]          @default([])
  permission PermissionLevel @default(General)
  banned     Boolean         @default(false)

  created_at DateTime @default(now())

  login_token String[]

  ServiceIntegration ServiceIntegration[]
  Token              Token[]
  TokenUse           TokenUse[]
}

enum TokenType {
  SignUp
  IntegrationCSRF
  Integration
}

model Token {
  type              TokenType
  id                String          @id @default(uuid())
  key               String          @unique
  expired_at        DateTime
  created_by        User            @relation(fields: [userUnique_id], references: [unique_id])
  userUnique_id     String
  isValid           Boolean         @default(true)
  tokenUse          TokenUse[]
  defaultPermission PermissionLevel @default(General)
  data              Json            @default("{}")
}

model TokenUse {
  id            String   @id @default(uuid())
  user          User     @relation(fields: [userUnique_id], references: [unique_id])
  token         Token    @relation(fields: [tokenId], references: [id])
  userUnique_id String
  tokenId       String
  used_at       DateTime @default(now())
}

enum Severity {
  Addressed
  Info
  Notice
  Warning
  Error
  Critical
}

model Information {
  id         String   @id @default(uuid())
  title      String
  details    String
  severity   Severity
  created_at DateTime @default(now())
  hidden     Boolean  @default(false)
}

model Service {
  service_name String
  service_id   String @id @default(uuid())
  origin       String
  key          String

  created_at         DateTime             @default(now())
  ServiceIntegration ServiceIntegration[]
}

model ServiceIntegration {
  id String @id @default(uuid())

  service           Service @relation(fields: [serviceService_id], references: [service_id])
  serviceService_id String
  user              User    @relation(fields: [userUnique_id], references: [unique_id])
  userUnique_id     String
  client_key        String  @unique @default(uuid())
  disabled          Boolean @default(false)

  created_at DateTime  @default(now())
  expires_at DateTime?
}
